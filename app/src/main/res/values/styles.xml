<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ViewStyle" >
        <item name="android:textSize">45sp</item> <!-- Text size -->
        <item name="android:padding">10dp</item> <!-- Padding -->
        <item name="android:textAllCaps">false</item> <!-- Padding -->
    </style>

    <style name="ButtonStyle" parent="ViewStyle">
        <item name="android:textColor">#FFFFFF</item> <!-- White text color -->
    </style>

    <style name="OrangeButtonStyle" parent="ButtonStyle">
        <item name="android:background">#FFA500</item> <!-- Orange background -->
    </style>

    <style name="BlueButtonStyle" parent="ButtonStyle">
        <item name="android:background">#03A9F4</item> <!-- Orange background -->
    </style>

    <style name="TextView" parent="ViewStyle">
        <item name="android:textColor">#A49696</item> <!-- White text color -->
    </style>
</resources>
